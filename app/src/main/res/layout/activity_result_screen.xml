<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/navBarColor"
    tools:context=".activities.ResultScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/andika"
                android:textSize="24dp"
                android:layout_marginStart="20dp"
                android:textColor="@color/white"
                android:text="Hello, Username!!"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:fontFamily="@font/andika"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:text="-Welcome Back"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="50dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/logout"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/ic_baseline_exit_to_app_24"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:textSize="14dp"
                android:textColor="@color/white"
                android:clickable="true"
                android:fontFamily="@font/andika"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animater"
            android:layout_width="130dp"
            android:layout_height="130dp"
            app:lottie_autoPlay="true"
            android:layout_marginEnd="50dp"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/hello"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:orientation="vertical">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/developerProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:clickable="true"
                android:focusable="true"
                app:srcCompat="@drawable/ic_baseline_person_24" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/feedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:visibility="invisible"
                android:clickable="true"
                android:focusable="true"
                app:srcCompat="@drawable/ic_baseline_feedback_24" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:rippleColor="@color/navBarColor"
                android:clickable="true"
                android:focusable="true"
                app:srcCompat="@drawable/ic_baseline_menu_24" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/ques_ui">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="410dp"
            android:rowCount="2"
            android:columnCount="2"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_columnWeight="1"
                app:cardCornerRadius="10dp"
                app:cardMaxElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="center"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:orientation="vertical">
                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/btn1"
                        android:layout_width="120dp"
                        android:layout_height="110dp"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        android:tag="1"
                        android:onClick="reDirect"
                        app:lottie_rawRes="@raw/quiz"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textAlignment="center"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:textColor="@color/navBarColor"
                        android:fontFamily="@font/andika"
                        android:text="Quiz"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="fill"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                app:cardCornerRadius="10dp"
                app:cardMaxElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="center"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:orientation="vertical">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/btn2"
                        android:layout_width="120dp"
                        android:layout_height="110dp"
                        app:lottie_autoPlay="true"
                        android:tag="2"
                        android:alpha="0.3"
                        android:onClick="reDirect"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/careers"/>
                    <TextView
                        android:id="@+id/career"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textAlignment="center"
                        android:textSize="14dp"
                        android:alpha="0.3"
                        android:textStyle="bold"
                        android:textColor="@color/navBarColor"
                        android:fontFamily="@font/andika"
                        android:text="Career"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_gravity="fill"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                app:cardCornerRadius="10dp"
                app:cardMaxElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="center"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:orientation="vertical">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/btn3"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:lottie_autoPlay="true"
                        android:tag="3"
                        android:alpha="0.3"
                        android:onClick="reDirect"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/mentorconnect"/>
                    <TextView
                        android:id="@+id/mentor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textAlignment="center"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:alpha="0.3"
                        android:textColor="@color/navBarColor"
                        android:fontFamily="@font/andika"
                        android:text="Mentor Connect"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_gravity="fill"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                app:cardCornerRadius="10dp"
                app:cardMaxElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="center"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:orientation="vertical">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/btn4"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:lottie_autoPlay="true"
                        android:tag="4"
                        android:alpha="0.3"
                        android:onClick="reDirect"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/profile"/>
                    <TextView
                        android:id="@+id/profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textAlignment="center"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:alpha="0.3"
                        android:textColor="@color/navBarColor"
                        android:fontFamily="@font/andika"
                        android:text="Profile"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </GridLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/potential"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:tag="5"
            android:alpha="0.3"
            android:textSize="14dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/buttons_back"
            android:textColor="@color/white"
            android:text="Blog Posts"/>

    </LinearLayout>

</LinearLayout>