<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/register_login_back"
    tools:context=".activities.ResultActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/white"
        android:background="@drawable/ques_ui"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/approach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Approach"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/andika"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="16dp"/>

            <ir.mahozad.android.PieChart
                android:id="@+id/pieChart"
                android:layout_marginTop="20dp"
                android:layout_width="300dp"
                android:layout_height="300dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R - Realistic"
                    android:fontFamily="@font/andika"
                    android:textColor="@color/black"
                    android:textSize="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I - Investigative"
                    android:fontFamily="@font/andika"
                    android:textColor="@color/black"
                    android:textSize="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A - Artistic"
                    android:fontFamily="@font/andika"
                    android:textColor="@color/black"
                    android:textSize="15dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S - Social"
                    android:fontFamily="@font/andika"
                    android:textColor="@color/black"
                    android:textSize="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="E - Enterprising"
                    android:fontFamily="@font/andika"
                    android:textColor="@color/black"
                    android:textSize="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C - Conventional"
                    android:fontFamily="@font/andika"
                    android:textColor="@color/black"
                    android:textSize="15dp"/>

            </LinearLayout>

        </LinearLayout>

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="320dp"
            android:layout_height="160dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/result"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/summaryBt"
            android:layout_marginTop="10dp"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Get Results"
            android:textColor="@color/white"
            android:background="@drawable/buttons_back"/>

    </LinearLayout>

</LinearLayout>