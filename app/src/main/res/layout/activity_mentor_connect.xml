<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register_login_back"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="10dp"
    tools:context=".activities.mentorConnect">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/registerMentor"
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:textSize="13dp"
        android:background="@drawable/buttons_back"
        android:textColor="@color/white"
        android:fontFamily="@font/andika"
        android:text="Register as a Mentor"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="680dp"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

           <androidx.recyclerview.widget.RecyclerView
               android:id="@+id/recView"
               android:layout_width="match_parent"
               android:scrollbarFadeDuration="@integer/material_motion_duration_long_1"
               android:scrollbarStyle="outsideInset"
               android:fadeScrollbars="false"
               android:layout_height="match_parent"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>